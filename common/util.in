# Colors
readonly Black='\033[0;30m'
readonly Red='\033[0;31m'
readonly Green='\033[0;32m'
readonly Brown='\033[0;33m'
readonly Blue='\033[0;34m'
readonly Purple='\033[0;35m'
readonly Cyan='\033[0;36m'
readonly LightGray='\033[0;37m'
readonly DarkGray='\033[1;30m'
readonly LightRed='\033[1;31m'
readonly LightGreen='\033[1;32m'
readonly Yellow='\033[1;33m'
readonly LightBlue='\033[1;34m'
readonly LightPurple='\033[1;35m'
readonly LightCyan='\033[1;36m'
readonly White='\033[1;37m'
readonly NC='\033[0m'

# Functions

abort() {
	echo -e "\n${Red}Aborting.${NC}"; exit
}

cmd_test() {
	hash $@ 2>/dev/null || { echo >&2 "\"$@\" could not be found. Please install it and try again."; abort; }
}

ret_code_test() {
	local cmdline="$@"
	local cmd="${cmdline%% *}"
	cmd_test $cmd
	"$@"
	local status=$?
	if [ $status -ne 0 ]; then
		echo -e -n "\n${Red}Error executing \"$@\".${NC}\n" >&2
		abort
	fi
	return $status
}

spinner() {
        local stime=0.1
        local sp='/-\|'
        printf ' '
        sleep $stime
        while true ; do
                printf '\b%.1s' "$sp"
                sp=${sp#?}${sp%???}
                sleep $stime
        done
}

declare -a spids
pulse() {
	case $1 in
		on)
			spinner &
			spids+=($!)
			;;
		off)
			kill -STOP "${spids[@]}"
			unset spids
			printf '\b '
			printf '\n'
			;;
		*)
			echo -e "${Red}Usage: ${FUNCNAME[0]} {on|off}${NC}"
			exit 1
			;;
	esac
}

arch_detect() {
	local arch=$(uname -m | sed 's/x86_//;s/i[3-6]86/32/')
	hash notify-send 2> /dev/null
	if [[ $? -eq 0 ]]; then
		notify-send "Architecture is ${arch}-bit"
	fi
	echo -e "Architecture is ${arch}-bit"
}

chessit() {
	local nr=1
	local nc=78
	echo -e ""
	for (( r = 0; r < $nr; r++ ))
	do
		for (( c = 0 ; c < $nc; c++ ))
		do
			local sqrs=`expr $r + $c`
			local odd=`expr $sqrs % 2`
			if [ $odd -eq 0 ]; then
				echo -en "\033[47m "
			else
				echo -en "\033[40m "
			fi
		done
		echo -e "\033[40m"
	done
	echo -e ""
}

greetings() {
	chessit
	ret_code_test date
	if [ "$EUID" -ne 0 ]; then
		local msg="Greetings $USER!"
		hash cowsay 2> /dev/null
		if [[ $? -eq 0 ]]; then
			cmd="cowsay -f tux $msg"
			ret_code_test $cmd
		else
			echo -e "$msg"
		fi
	fi
	echo -e "You are currently on $HOSTNAME"
	echo -e "gem5.TnT will save files in $ROOTDIR"
	chessit
}

check_privledges() {
	if [ "$EUID" -ne 0 ]; then
		msg="Superuser priviledges are needed in order to perform\
		some operations"
		echo -e $msg
		exit
	fi
}

wget_into_dir() {
	cmd_test wget
	declare -a argarray=("${!1}")
	for e in "${argarray[@]}"; do
		local c="mkdir -p ${e%%:*}"
		ret_code_test $c
		printf "Downloading... "
		pulse on
		wget -N ${e#*:} -P ${e%%:*} > /dev/null 2>&1
		pulse off
		printf "${Green}${e#*:} downloaded in ${e%%:*}${NC}\n"
	done
}

hg_clone_into_dir() {
	cmd_test hg
	declare -a argarray=("${!1}")
	for e in "${argarray[@]}"; do
		local c="mkdir -p ${e%%,*}"
		ret_code_test $c
		cd ${e%%,*}
		printf "Cloning repository... "
		pulse on
		hg clone ${e#*,} > /dev/null 2>&1
		pulse off
		printf "${Green}${e#*,} cloned into ${e%%,*}${NC}\n"
	done
}

git_clone_into_dir() {
	cmd_test git
	declare -a argarray=("${!1}")
	for e in "${argarray[@]}"; do
		local c="mkdir -p ${e%%:*}"
		ret_code_test $c
		cd ${e%%:*}
		printf "Cloning repository... "
		pulse on
		git clone --recursive ${e#*:} > /dev/null 2>&1
		pulse off
		printf "${Green}${e#*:} cloned into ${e%%:*}${NC}\n"
	done
}

get_num_procs() {
	local __retvar=$1;
	hash nproc 2> /dev/null
	if [[ $? -eq 0 ]]; then
		__nprocs=$(nproc)
	else
		__nprocs=$(cat /proc/cpuinfo | grep processor | wc -l)
	fi
	if [[ "$__retvar" ]]; then
		eval $__retvar="'$__nprocs'"
	else
		echo "$__nprocs"
	fi
}

build() {
	local target=$1
	local buildopts=$2
	get_num_procs np
	local njobs=`expr $np - 1`
	local cmd="scons --ignore-style $buildopts $target -j$njobs"
	printf "Building $target... "
	pulse on
	${cmd} > /dev/null 2>&1
	pulse off
	if [[ -e $target ]]; then
		printf "${Green}Target successfully built${NC}\n"
		file $target
	else
		printf "${Red}Error building $target${NC}\n"
		printf "${Red}Command used: ${cmd}${NC}\n"
	fi
}

build_gem5() {
	local arch=$1
	local mode=$2
	local target="build/$arch/gem5.$mode"
	build $target
}

build_libgem5() {
	local arch=$1
	local mode=$2
	local target="build/$arch/libgem5_$mode.so"
	local buildopts="--with-cxx-config --without-python --without-tcmalloc"
	build ${target} "${buildopts}"
}

